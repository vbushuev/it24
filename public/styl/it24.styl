// out: ../css/it24.css, compress: true
.heading
    padding: .2em .6em;
    vertical-align: middle;
    font-weight: 600;
.clearfix
    clear:both;
    height:1rem;
    display: block;
    width: 100%;
.item
    line-height: 4em;
    //height:4em;
    padding: auto 0;
    cursor: pointer;
    transition: all 0.4s ease-out;
    font-size: 90%;
    position: relative;
    .multirows
        line-height: 1em;
        height: 4em;
        margin: 0;
        display: inline-block;
        padding:.4em .2em;
    div > .error-message
        display: none;
        position:absolute;
        top:1em;
        left:3em;
        transition: all .4s ease-out
        padding 1em;
        width 42rem;
        line-height: 1em;
        background-color: #fff;
        color:red;
        border: dotted 1px red;
        z-index: 999;
    div.failed:hover > .error-message
        display: block;
.item:hover
    background-color: rgba(0,0,0,.1);
.item.status-admin
    background-color: rgba(0,255,0,.2);
.item.status-admin:hover
    background-color: rgba(0,255,0,.1);
.item.status-failed
    background-color: rgba(255,0,0,.2);
.item.status-failed:hover
    background-color: rgba(255,0,0,.1);
.modal
    .title
        font-size: 1.4em;
        font-weight: 400;
    .supplier-title
        font-size: 110%;
        font-weight: 600;
    .input-group
        margin-bottom: 1rem;
.input-group-addon,.input-group-btn > button
    min-width: 14rem;
.modal-header h5
    display inline-block
.dropdown-submenu
    position: relative;
.dropdown-submenu>.dropdown-menu
    top: 0;
    left: 100%;
    margin-top: -6px;
    margin-left: -1px;
    -webkit-border-radius: 0 6px 6px 6px;
    -moz-border-radius: 0 6px 6px;
    border-radius: 0 6px 6px 6px;
.dropdown-submenu:hover>.dropdown-menu
    display: block;
.dropdown-submenu>a:after
    display: block;
    content: " ";
    float: right;
    width: 0;
    height: 0;
    border-color: transparent;
    border-style: solid;
    border-width: 5px 0 5px 5px;
    border-left-color: #ccc;
    margin-top: 5px;
    margin-right: -10px;
.dropdown-submenu:hover>a:after
    border-left-color: #fff;
.dropdown-submenu.pull-left
    float: none;
.dropdown-submenu.pull-left>.dropdown-menu
    left: -100%;
    margin-left: 10px;
    border-radius: 6px 0 6px 6px;
.filter-check
    position: absolute;
    left:1em;
.submenu
    margin-left: 1em;
.modal p
    line-height: 1.2em;
    font-size: 1.2em;
input[type="checkbox"]
    height: 1em;
a .fa
    color rgba(0,0,0,.5)
    cursor: pointer;
    transition: all .2s ease-in;
a:hover .fa
    color green
.catalog
    margin:0;
    float:left;
    width:16rem;
    height:16rem;
    position: relative;
    text-align: center;
    cursor: pointer;
    padding: 2em 1em;
    opacity:.8;
    transition: opacity .4s ease-in;
    a
        text-decoration: none;
    .fa
        display: block;
        transition: color .4s ease-in;
.catalog:hover
    opacity: 1
    .fa
        color:green
.catalog-navigation
    list-style: none;
    margin: 0;
    padding: 0;
    transition: all .4s ease-in;
    .catalog-navigation-item
        padding: .2em;
        position: relative;
        a
            text-decoration: none;
            color rgba(0,0,0,.7);
        .catalog-title
            font-wight: 100;
        .catalog-title.catalog-checked
            font-style: normal;
            font-weight: 600;
        .catalog-navigation
            margin-left: 1em;
        .catalog-goods-count
            position: absolute;

.catalog-good-item
    display: block;
    margin: 0;
    float: left;
    padding 1em;
    width 13em;
    height 13em;
    position: relative;
    text-align: center;
    border solid 1px #fff;
    border-radius: .2em;
    transition: all .2s ease-in
    overflow: hidden;
    img
        display: block;
        margin 0 auto;
    .catalog-good-title
        margin-top: 1em;
    .check-good
        position: absolute;
        left 1em;
        top 1em
.catalog-good-item.good-checked
    background-color: rgba(0,0,0,.1);
    .catalog-good-title
        font-weight: 600
.catalog-good-item:hover
    border-color grey;
